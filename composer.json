{
    "name": "andrey/whatsapp-stream-encryption",
    "description": "WhatsApp-style stream encryption implementation for PSR-7",
    "type": "library",
    "require": {
        "php": "^8.1",
        "psr/http-message": "^1.0",
        "guzzlehttp/psr7": "^2.5",
        "paragonie/sodium_compat": "^1.20"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "WhatsAppStream\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WhatsAppStream\\Tests\\": "tests/"
        }
    }
} 